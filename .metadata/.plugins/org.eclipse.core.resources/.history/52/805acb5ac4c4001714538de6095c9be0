import java.io.IOException;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;

public class Parser2 {
	
	//Definimos la url de la página web cuyo contenido queremnos parsear
	public static final String url = "https://www.pccomponentes.com/";
	
	static Document doc = null;

	public static void main(String[] args) {
		
		try {
			
		doc = Jsoup.connect(url).get();
		
		}catch(IOException e) {
			
			e.printStackTrace();
		}
		
		String title = doc.title();
		
		System.out.println(title+"\n\n");
		
		Elements a = doc.getElementsByAttributeValue("data-list", "Destacados Home");
		//Elements b = doc.getElementsByAttribute("data-price");
		//Elements c = doc.getElementsByAttribute("data-name");
		//Elements d = doc.getElementsByAttributeValue("class", "tarjeta-articulo__extras");
		
		
		int contador = 0;
		
		for(Element e: a) {
			contador++;
			String contenido = e.attr("data-name");
			String precio = e.attr("data-price");
			System.out.println("Producto nº: "+contador+" >> "+"Contenido: " +contenido+" - Precio: "+precio+"€ "+"\n");
		}

        
        }
        
		


	}

