
public class Ejercicio3 implements Runnable {

	private String nombreHilo;


	public Ejercicio3() {

	}

	public Thread iniciaHilo(String nombreHilo, int p) {


		Thread t = new Thread(this, nombreHilo);
		t.setPriority(p);
		t.start();
		this.nombreHilo=nombreHilo;
		return t;
	}

	@Override
	public void run() {

		for (int i = 0; i < 5; i++) {
			System.out.println("Hola, soy el hilo: " + nombreHilo);
		}

	}

	public static void main(String[] args) {

		Ejercicio3 p = new Ejercicio3();

		p.iniciaHilo("rana", 1);
		p.iniciaHilo("tortuga", 3);
		p.iniciaHilo("hombre", 5);
		p.iniciaHilo("perro", 7);
		p.iniciaHilo("caballo", 10);


	}

}
