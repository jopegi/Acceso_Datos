
//Se crea la clase Producer. Esta clase implementa la interfaz Runnable
public class Producer implements Runnable {
  Q q;
  //Constructor de la clase
  Producer(Q q) {
    this.q = q;
    //Cuando se cree un instancia de esta clase se creará y lanzará, a su vez,
    //un hilo de ejecución
    new Thread(this, "Productor").start();
  }

  //Método run() que se ejecutará cuando se cree un hilo
  public void run() {
    int i = 0;
    //Bucle infinito
    while(true) {
      q.put(i++);
    }
  }
}