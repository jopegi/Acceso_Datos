
public class Ejercicio3 implements Runnable {

	private String nombreHilo;
	private int prioridad;

	public Ejercicio3() {

	}

	public Thread iniciaHilo(String nombreHilo, int p) {

		this.nombreHilo = nombreHilo;
		this.prioridad = p;

		new Thread(this, nombreHilo).setPriority(prioridad);

		return Thread.currentThread();
	}

	@Override
	public void run() {

		for (int i = 0; i < 5; i++) {
			System.out.println("Hola, soy el hilo: " + nombreHilo);
		}

	}

	public static void main(String[] args) {

		Ejercicio3 p = new Ejercicio3();

		Thread hiloRana = p.iniciaHilo("rana", 1);
		Thread hiloTortuga = p.iniciaHilo("tortuga", 3);
		Thread hiloHombre = p.iniciaHilo("hombre", 5);
		Thread hiloPerro = p.iniciaHilo("perro", 7);
		Thread hiloCaballo = p.iniciaHilo("caballo", 10);

		hiloRana.start();
		hiloTortuga.start();
		hiloHombre.start();
		hiloPerro.start();
		hiloCaballo.start();

	}

}
