import java.io.IOException;

import org.jsoup.Connection.Response;
import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.select.Elements;
//import org.w3c.dom.Element;
import org.jsoup.nodes.Element;

public class Parser {
	
	//Definimos la url de la página web cuyo contenido queremnos parsear
	public static final String url = "https://www.pccomponentes.com";
	

	public static void main(String[] args) {
		
		// Compruebo si me da un 200 al hacer la petición
        if (getStatusConnectionCode(url) == 200) {
			
            // Obtengo el HTML de la web en un objeto Document
            Document document = getHtmlDocument(url);
			
            // Busco todas las entradas que estan dentro de: 
            
            //Elements entradas = document.select("div.col-xs-6 col-sm-4 col-md-3 col-lg-3 article-block").not("tarjeta-articulo__elementos-basicos");
            Elements entradas = document.select("div.tarjeta-articulo__extras");
            
            System.out.println("Número de entradas en la página inicial es de : "+entradas.size()+"\n");
            
            //System.out.println("Entradas: "+entradas);
			
            // Paseo cada una de las entradas
            for (Element elem : entradas) {
            
                //String contenido = elem.getElementsByAttribute("data-name").toString();
                //String precio = elem.getElementsByAttribute("data-price").toString();
            	
            	//String contenido = elem.attr("data-name");
            	//String precio = elem.attr("data-price");
 		
                //System.out.println(contenido+"\n"+precio+"\n\n");
				
                // Con el método "text()" obtengo el contenido que hay dentro de las etiquetas HTML
                // Con el método "toString()" obtengo todo el HTML con etiquetas incluidas
            	
            	String contenido = elem.getElementsByTag("a").attr("data-name");
            	System.out.println(contenido+"\n");
            }
				
        }else
            System.out.println("El Status Code no es OK es: "+getStatusConnectionCode(url));
    }
		

	
	
	//Averiguamos el estado o el "status code" de la petición a la web
	
	/*Códigos de estado:
	 * 		200 OK					300 Multiple Choices
	 * 		301 Moved Permanently	305 Use Proxy
	 * 		400 Bad Request			403 Forbidden
	 * 		404 Not Found			500 Internal Server Error
	 * 		502 Bad Gateway			503 Service Unavailable
	 * */
	
	public static int getStatusConnectionCode(String url) {
		
	    Response response = null;
		
	    try {
		response = Jsoup.connect(url).userAgent("Mozilla/56.0.2").timeout(100000).ignoreHttpErrors(true).execute();
	    } catch (IOException ex) {
		System.out.println("Excepción al obtener el Status Code: " + ex.getMessage());
	    }
	    return response.statusCode();
	}

	//Obtenemos un objeto de la clase Document de JSoup con el contenido del HTML de la web que nos interesa para poder
	//parsearlo posteriormente
	public static Document getHtmlDocument(String url) {

	    Document doc = null;
		try {
		    doc = Jsoup.connect(url).userAgent("Mozilla/56.0.2").timeout(100000).get();
		    } catch (IOException ex) {
			System.out.println("Excepción al obtener el HTML de la página" + ex.getMessage());
		    }
	    return doc;
	}
}
