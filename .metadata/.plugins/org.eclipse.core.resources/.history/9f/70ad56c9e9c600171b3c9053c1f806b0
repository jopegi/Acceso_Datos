
public class Ejercicio3 implements Runnable {

	private String nombreHilo;


	public Ejercicio3() {

	}

	public Thread iniciaHilo(String nombreHilo, int p) {


		Thread t = new Thread(this, nombreHilo);
		t.setPriority(p);
		return t;
	}

	@Override
	public void run() {

		for (int i = 0; i < 5; i++) {
			System.out.println("Hola, soy el hilo: " + nombreHilo);
		}

	}

	public static void main(String[] args) {

		Ejercicio3 p = new Ejercicio3();

		Thread h1 = p.iniciaHilo("rana", 1);
		Thread h2 = p.iniciaHilo("tortuga", 3);
		Thread h3 = p.iniciaHilo("hombre", 5);
		Thread h4 = p.iniciaHilo("perro", 7);
		Thread h5 = p.iniciaHilo("caballo", 10);
		
		h1.start();
		h2.start();
		h3.start();
		h4.start();
		h5.start();


	}

}
